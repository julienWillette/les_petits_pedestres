{% extends 'base.html.twig' %}

{% block title %}{{ 'Nos produits'|trans }}{% endblock %}

{% block body %}

<div class="container-fluid">
  <div class="row">
    <div class="col-md-12">
      <div class="row">
        <div class="col-md-3 container-filter">
          {{ form_start(form) }}
          <p class="filter-title">{{ 'Filtrer par'|trans }}</p>
          {{ form_row(form.q) }}
          <hr class="hr-filter">
          <p class="subtitle-filter">{{ 'Prix'|trans }}</p>
          <div class="row">
            <div class="col-md-6">
              {{ form_row(form.min) }}
            </div>
            <div class="col-md-6">
              {{ form_row(form.max) }}
            </div>
          </div>
          <div id="price-slider" data-min="{{ min }}" data-max="{{ max }}" class="mt-3 mb-3">
          </div>
          <hr class="hr-filter">
          <p class="subtitle-filter">{{ 'Catégories'|trans }}</p>
          <p class="filter">{{ form_row(form.category) }}</p>
          <hr class="hr-filter">
          <p class="subtitle-filter">{{ 'Taille'|trans }}</p>
          <p class="filter">{{ form_row(form.size) }}</p>
          <hr class="hr-filter">
          <p class="subtitle-filter">{{ 'En Promotion'|trans }}</p>
          <p class="filter">{{ form_row(form.promo) }}</p>
          <button type="submit" class="btn btn-primary w-100 btn-filtre">Filtrer</button>
          {{ form_end(form) }}
        </div>
        <div class="col-md-9">
                  <div class="mt-5 d-flex justify-content-end">
          {{ knp_pagination_render(products) }}
        </div>
          {% for product in products %}

          <a class="aled-link" href="{{ path('product_show', {'slug': product.slug }) }}">
            <div class="card-dwarf green" style="background-color: {{ product.color.hexadecimal }};">
              <p class="title-card">{{ product.name }}</p>
              <p class="heart"><i class="far fa-heart"></i></p>
              <p class="number-like">{{ product.rate }}</p>
              <img class="img-product" src="{{ product.picture[0].url }}">
              <div class="container-prix">
                <p class="price">{{ product.price }}€</p>
              </div>
        </div>
        {% else %}
        <div class="container-fluid align-items-center">
            <img src="https://www.but.fr/fstrz/r/s/media.but.fr/images_produits/produit-xl/5055195023179_Q.jpg?frz-v=353" alt="">
            <h1>{{ 'Désolée ! Votre recherche nain rien donnée'|trans }}</h1>
        </div>
        {% endfor %}
      </div>
    </div>
  </div>
</div>
</div>

{% endblock %}
